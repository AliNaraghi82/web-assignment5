<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>UN Countruies | <%= country.name %></title>
    <link href="/css/main.css" rel="stylesheet" />
  </head>
  <body>
    <%- include('partials/navbar', {page: '/about'}) %>

    <div class="container mx-auto p-4">
      <div class="hero bg-base-200 rounded-lg p-4">
        <div class="hero-content flex-col lg:flex-row">
          <div>
            <h1 class="text-5xl font-bold text-center"><%= country.name %></h1>
            <p class="py-6">
              Below, you will find detailed information about the country:
              <span class="font-bold"><%= country.name %></span>
            </p>
          </div>
        </div>
      </div>
    </div>

    <div class="container mx-auto flex p-4">
      <div class="w-1/2">
        <img
          src="<%= country.flag %>"
          class="w-full h-auto rounded-lg shadow-2xl"
          alt=""
        />
      </div>
      <div class="w-1/2">
        <div class="flex flex-col pl-4 space-y-1">
          <div class="flex">
            <span class="font-bold">Country Name: </span>
            <span class="pl-2"><%= country.name %></span>
          </div>
          <div class="flex">
            <span class="font-bold">Official Name: </span>
            <span class="ml-2"><%= country.official %></span>
          </div>
          <div class="flex">
            <span class="font-bold">Native Name: </span>
            <span class="ml-2"><%= country.nativeName %></span>
          </div>
          <div class="flex">
            <span class="font-bold">Region: </span>
            <span class="ml-2"><%= country.Region.name %></span>
          </div>
          <div class="flex">
            <span class="font-bold">Alpha 2 Code: </span>
            <span class="ml-2"><%= country.a2code %></span>
          </div>
          <div class="flex">
            <span class="font-bold">Capital: </span>
            <span class="ml-2"><%= country.capital %></span>
          </div>
          <div class="flex">
            <span class="font-bold">Population: </span>
            <span class="ml-2"><%= country.population.toLocaleString() %></span>
          </div>
          <div class="flex">
            <span class="font-bold">Page On Wikipedia: </span>
            <a
              href="<%= country.wikipediaURL %>"
              class="ml-2 btn btn-xs"
              target="_blank"
              ><%= country.wikipediaURL %></a
            >
          </div>
          <br />
          <span id="quote"></span>
          <br />
          <div class="flex flex-col space-y-4 mt-4 flex-wrap">
            <a
              class="btn btn-success btn-sm w-max text-white"
              href="/un/editCountry/<%= country.a2code %>"
              >Edit Country: <%= country.name %></a
            >
            <a
              class="btn btn-error btn-sm w-max text-white"
              href="/un/deleteCountry/<%= country.a2code %>"
              >Delete Country: <%= country.name %></a
            >
            <a
              class="btn btn-primary btn-sm w-max"
              href="#"
              onclick="history.back(); return false;"
              >RETURN</a
            >
          </div>
        </div>
      </div>
    </div>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        fetch("https://quotable.io/random")
          .then((response) => response.json())
          .then((res) => {
            document.getElementById(
              "quote"
            ).innerHTML = `"${res.content}" <br> - <em>${res.author}</em>`;
          });
      });
    </script>
  </body>
</html>
